{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2020", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@shadcn-in-nx/styles/*": ["libs/shared-ui/src/styles/*"],
			"@shadcn-in-nx/ui": ["libs/shared-ui/src/ui/index.ts"],
			"@shadcn-in-nx/ui/*": ["libs/shared-ui/src/ui/*"],
			"@shadcn-in-nx/utils": ["libs/shared-ui/src/lib/utils.ts"],
			"@shared/libs": ["libs/shared-libs/src/index.ts"],
			"@shared/models": ["libs/shared-models/src/index.ts"],
			"@shared/ui": ["libs/shared-ui/src/index.ts"],
			"@shared/ui/server": ["libs/shared-ui/src/server.ts"],
			"@shared/validation": ["libs/shared-validation/src/index.ts"],
			"@goalie/next": ["libs/goalie-next/src/index.ts"],
			"@vieknam/goalie-next/server": ["libs/goalie-next/src/server.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
